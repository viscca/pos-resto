<resources>
    <!-- Base application theme. -->
    <style name="Theme.POSRESTOKASIR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.POSRESTOKASIR.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.POSRESTOKASIR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.POSRESTOKASIR.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyEditText">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:background">@drawable/selector_bg_edittext</item>
        <item name="android:paddingLeft">@dimen/dimens_15dp</item>
        <item name="android:paddingTop">@dimen/dimens_10dp</item>
        <item name="android:paddingRight">@dimen/dimens_15dp</item>
        <item name="android:paddingBottom">@dimen/dimens_10dp</item>
    </style>

    <style name="MySpinner">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/dimens_15dp</item>
        <item name="android:paddingTop">@dimen/dimens_10dp</item>
        <item name="android:paddingRight">@dimen/dimens_15dp</item>
        <item name="android:paddingBottom">@dimen/dimens_10dp</item>
    </style>

    <style name="MyFloatEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/darkgrey</item>
        <item name="colorControlActivated">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TextKlik">
        <item name="android:textColor">@drawable/textselect</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_bg_button</item>
        <item name="android:minHeight">@dimen/dimens_40dp</item>
    </style>

    <style name="Button2">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_bg_button2</item>
        <item name="android:minHeight">@dimen/dimens_40dp</item>
    </style>

    <style name="Button3">
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:background">@drawable/selector_bg_button3</item>
        <item name="android:minHeight">@dimen/dimens_30dp</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="IconKlik">
        <item name="android:drawableEnd">@drawable/icon_select</item>
    </style>
</resources>