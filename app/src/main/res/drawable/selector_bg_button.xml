<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimens_4dp" />
            <padding android:left="@dimen/dimens_3dp" android:top="@dimen/dimens_3dp" android:right="@dimen/dimens_3dp" android:bottom="@dimen/dimens_3dp" />
            <stroke android:width="1.0px" android:color="?attr/colorSecondary" />
            <solid android:color="?attr/colorSecondary" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimens_4dp" />
            <padding android:left="@dimen/dimens_3dp" android:top="@dimen/dimens_3dp" android:right="@dimen/dimens_3dp" android:bottom="@dimen/dimens_3dp" />
            <stroke android:width="1.0px" android:color="?attr/colorSecondary" />
            <solid android:color="?attr/colorSecondary" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimens_4dp" />
            <padding android:left="@dimen/dimens_3dp" android:top="@dimen/dimens_3dp" android:right="@dimen/dimens_3dp" android:bottom="@dimen/dimens_3dp" />
            <stroke android:width="1.0px" android:color="@color/grey" />
            <solid android:color="@color/grey" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimens_4dp" />
            <padding android:left="@dimen/dimens_3dp" android:top="@dimen/dimens_3dp" android:right="@dimen/dimens_3dp" android:bottom="@dimen/dimens_3dp" />
            <stroke android:width="1.0px" android:color="?attr/colorSecondaryVariant" />
            <solid android:color="?attr/colorPrimary" />
        </shape>
    </item>
</selector>